<!-- Create EJS template -->

<html>
<head>
    <%- include('partials/head.ejs',
        {
            pageTitle: 'Create',
            pageDescription: 'Create a new Minecraft server'
        }) %>
</head>
<body class="bg-gray-100 text-gray-900">
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
	    <svg xmlns="http://www.w3.org/2000/svg"  class="mx-auto h-24 w-auto text-[#EE7674]" viewBox="0 0 512 512"><title>Create</title><path d="M384 224v184a40 40 0 01-40 40H104a40 40 0 01-40-40V168a40 40 0 0140-40h167.48" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/><path d="M459.94 53.25a16.06 16.06 0 00-23.22-.56L424.35 65a8 8 0 000 11.31l11.34 11.32a8 8 0 0011.34 0l12.06-12c6.1-6.09 6.67-16.01.85-22.38zM399.34 90L218.82 270.2a9 9 0 00-2.31 3.93L208.16 299a3.91 3.91 0 004.86 4.86l24.85-8.35a9 9 0 003.93-2.31L422 112.66a9 9 0 000-12.66l-9.95-10a9 9 0 00-12.71 0z" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/></svg>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Create a new Minecraft server
            </h2>
        </div>
        <form class="mt-8 space-y-6" action="/create" method="POST">
	    <!-- Form should have a server name input, server type radio buttons (Vanilla or Paper), server version input, RAM input, and a submit button -->
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="server-name" class="sr-only">Server Name</label>
                    <input id="server-name" name="server-name" type="input" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#EE7674] focus:border-[#EE7674] focus:z-10 sm:text-sm duration-300" placeholder="my-really-cool-server">
                </div>
            </div>

	    <div class="rounded-md shadow-sm -space-y-px">
		<div>
		    <label for="server-type" class="sr-only">Server Type</label>
		    <select id="server-type" name="server-type" class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#EE7674] focus:border-[#EE7674] focus:z-10 sm:text-sm duration-300">
			<option value="vanilla">Vanilla</option>
			<option value="paper">Paper</option>
		    </select>
		</div>
		</div>

		<div class="rounded-md shadow-sm -space-y-px">
		<div>
			<label for="server-version" class="sr-only">Server Version</label>
			<input id="server-version" name="server-version" type="input" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#EE7674] focus:border-[#EE7674] focus:z-10 sm:text-sm duration-300" placeholder="1.16.5">
		</div>
		</div>

		<div class="rounded-md shadow-sm -space-y-px">
		<div>
			<label for="server-ram" class="sr-only">Server RAM</label>
			<input id="server-ram" name="server-ram" type="input" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#EE7674] focus:border-[#EE7674] focus:z-10 sm:text-sm duration-300" placeholder="2G">
		</div>
		</div>


            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[#EE7674] hover:bg-[#EB5E5C] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#EE7674] duration-300">
                    Submit
                </button>
            </div>

            <% try { %>
                <% if (error) { %>
                    <div class="text-center text-red-500">
                        <p><%= error %></p>
                    </div>
                <% } %>
            <% } catch (e) { %>
            <% } %>
        </form>
    </div>
</div>
</body>
</html>
